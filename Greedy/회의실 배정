#include<bits/stdc++.h>
using namespace std;

bool cmp(const vector<int>&a, const vector<int>&b){
    if(a[1] == b[1])
        return a[0] < b[0];
    return a[1] < b[1];
}
int solution(vector<vector<int> > arr)
{
    int answer = 0;
    
    sort(arr.begin(), arr.end(), cmp);
    
    int end_time;
    
    for(int i = 0; i < arr.size(); i++){
        if(i == 0){
            answer++;
            end_time = arr[0][1];
        }else{
            if(arr[i][0] >= end_time){
                answer++;
                end_time = arr[i][1];
            }
        }
    }
    
    return answer;
}
